<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:text="Silahkan pilih bangun datar :"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Persegi"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorButton"
        android:textColor="#fff"
        android:onClick="luasPersegi"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Persegi Panjang"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorButton"
        android:textColor="#fff"
        android:onClick="luasPersegiPanjang" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Lingkaran"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorButton"
        android:textColor="#fff"
        android:onClick="luasLingkaran" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Segitiga"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorButton"
        android:textColor="#fff"
        android:onClick="luasSegitiga"/>

</LinearLayout>